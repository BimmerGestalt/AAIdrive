<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="CalendarListItemBinding" >
        <variable
            name="data"
            type="me.hufman.androidautoidrive.calendar.PhoneCalendar" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="6dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@{data.visible ? 1.0f : 0.4f}">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="4dp"
                android:visibility="@{!data.visible}"
                android:src="@drawable/empty_dot"
                app:tint="@{data.color}" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="4dp"
                android:visibility="@{data.visible}"
                android:src="@drawable/default_dot"
                app:tint="@{data.color}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@{data.name}" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@{data.visible ? 1.0f : 0.4f}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="@{data.synced}"
                android:text="Synced from "
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="@{!data.synced}"
                android:text="Not syncing "
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@{data.accountName}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text=" via "
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@{data.accountType}" />
        </LinearLayout>
    </LinearLayout>
</layout>