<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:paddingTop="@dimen/default_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/lbl_connectionpage" />

        <View style="@style/Divider"
            android:layout_marginBottom="10dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paneDependencyInfo"
            android:name="me.hufman.androidautoidrive.phoneui.fragments.DependencyInfoFragment"/>

        <View style="@style/Divider"
            android:layout_marginBottom="15dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paneConnectionStatus"
            android:name="me.hufman.androidautoidrive.phoneui.fragments.ConnectionStatusFragment"/>

        <View style="@style/Divider"
            android:layout_marginBottom="15dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentCarCapabilities"
            android:name="me.hufman.androidautoidrive.phoneui.fragments.CarCapabilitiesFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paneCarAdvancedInfo"
            android:name="me.hufman.androidautoidrive.phoneui.fragments.CarAdvancedInfoFragment"/>
    </LinearLayout>
</ScrollView>